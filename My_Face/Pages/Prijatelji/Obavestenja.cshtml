@page
@model My_Face.Pages.Prijatelji.ObavestenjaModel
@{
}

<section>
    <div class="square_box box_three"></div>
    <div class="square_box box_four"></div>
    <div class="container mt-5">
        <div class="row">

            @for(int i = 0; i<Model.notifikacije.Count; i++)
            {
                <form method="POST">
                        <div class="col-sm-12">
                            <div class="alert fade alert-simple alert-primary alert-dismissible text-left font__family-montserrat font__size-16 font__weight-light brk-library-rendered rendered show" role="alert" data-brk-library="component__alert">
                                <i class="start-icon fa fa-thumbs-up faa-bounce animated"></i>
                                <strong class="font__weight-semibold">Obavestenje!</strong> Korisnik @Model.imena[i] ima novu objavu. Datum objave @Model.notifikacije[i].senttime
                                <input type="submit" class="btn btn-primary" asp-route-id=@Model.notifikacije[i].id asp-page-handler="Obrisi" value="Obrisi">
                            </div>
                        </div>
                </form>
            }
        </div>
    </div>
</section>