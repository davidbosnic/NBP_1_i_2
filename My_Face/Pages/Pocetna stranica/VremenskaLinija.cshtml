@page
@model My_Face.Pages.Pocetna_stranica.VremenskaLinijaModel
@{
    Layout = "_LayoutPocetna";
}
@section ProfilnaSlika{
    <img src="@Model.Korisnik.Slika" alt="" class="img-responsive profile-photo" />
}
@section ProfilnaSlikaPozadina{
    <style>
        .timeline-cover {
            background: url("@Model.Korisnik.SlikaPozadine") no-repeat;
            background-position: center;
            background-size: cover;
            min-height: 360px;
            border-radius: 0 0 4px 4px;
            position: relative;
        }
    </style>
}
@section ImeIPrezime{
    @Model.Korisnik.Ime @Model.Korisnik.Prezime
}
@section ProfilnaSlika2{
    @Model.Korisnik.Slika
}
@section ImeIPrezime2{
    @Model.Korisnik.Ime @Model.Korisnik.Prezime
}
@section BrojPratilaca{
    Pratilaca : @Model.BrojPratilaca()
}

@if (Model.Objave != null)
{
    @foreach (var item in Model.Objave)
    {
        <form method="post">
            <div class="post-content">

                <!--Post Date-->
                <div class="post-date hidden-xs hidden-sm">
                    <h5>@Model.Korisnik.Ime</h5>
                    <p class="text-grey">@item.DatumObjave</p>
                </div><!--Post Date End-->

                <img src="@item.Slika" alt="post-image" class="img-responsive post-image" />
                <div class="post-container">
                    <img src="@Model.Korisnik.Slika" alt="user" class="profile-photo-md pull-left" />
                    <div class="post-detail">
                        <div class="user-info">
                            <h5><a href="timeline.html" class="profile-link">@Model.Korisnik.Ime @Model.Korisnik.Prezime</a> <span class="following">following</span></h5>
                        </div>
                        <div class="reaction">

                            <a class="btn text-green" asp-route-id="@item.ID" asp-page-handler="Lajk"><i class="icon ion-thumbsup"></i></a>
                            <p>@item.Lajkova</p>
                            <a class="btn text-red" asp-route-id="@item.ID" asp-page-handler="Dislajk"><i class="fa fa-thumbs-down"></i></a>
                        </div>
                        <div class="line-divider"></div>
                        <div class="post-text">
                            <p> @item.Tekst </p>
                        </div>
                        <div class="line-divider"></div>

                        @foreach (var item2 in @Model.KomentariZaObjave.GetValueOrDefault(item.ID))
                        {
                            <div class="post-comment">
                                <img src="@item2.Korisnik.Slika" alt="" class="profile-photo-sm" />
                                <p><a href="timeline.html" class="profile-link">@item2.Korisnik.Ime </a> @item2.Tekst</p>
                            </div>
                        }

                        <div class="post-comment">
                            <img src="@Model.Korisnik.Slika" alt="" class="profile-photo-sm" />
                            <input type="text" asp-for="Komentarcic" class="form-control" placeholder="Post a comment">
                            <a class="btn text-red" asp-route-id="@item.ID" asp-page-handler="Komentarisi"><i class="fa fa-thumbs-down"></i></a>
                        </div>
                    </div>
                </div>
            </div>

        </form>
    }
}