@page
@model My_Face.Pages.Prijatelji.ChatModel
@{
    Layout = "_LayoutPocetna";
}
@section ProfilnaSlika{
    <img src="@Model.Korisnik.Slika" alt="" class="img-responsive profile-photo" />
}
@section ProfilnaSlikaPozadina{
    <style>
        .timeline-cover {
            background: url("@Model.Korisnik.SlikaPozadine") no-repeat;
            background-position: center;
            background-size: cover;
            min-height: 360px;
            border-radius: 0 0 4px 4px;
            position: relative;
        }
    </style>
}
@section ImeIPrezime{
    @Model.Korisnik.Ime @Model.Korisnik.Prezime
}
@section ProfilnaSlika2{
    @Model.Korisnik.Slika
}
@section ImeIPrezime2{
    @Model.Korisnik.Ime @Model.Korisnik.Prezime
}
@section BrojPratilaca{

}

<form method="post">
    <div id="page-contents">
        <div class="container">
            <div class="row">
                <div class="col-md-7">
                    <div class="chat-room">
                        <div class="row">
                            <div class="col-md-7">
                                <div class="tab-content scrollbar-wrapper wrapper scrollbar-outer">
                                    <div class="tab-pane active" id="contact-1">
                                        <div class="chat-body">
                                            <ul class="chat-message">
                                                @if(Model.poruke!=null)
                                                {
                                                    @foreach (var item in Model.poruke)
                                                    {
                                                        @if(Convert.ToInt32(item.senderid)==Model.Korisnik.ID)
                                                        {
                                                            <li class="right">
                                                                <img src=@Model.Korisnik.Slika alt="" class="profile-photo-sm pull-right" />
                                                                <div class="chat-item">
                                                                    <div class="chat-item-header">
                                                                        <h5>@Model.Korisnik.Ime @Model.Korisnik.Prezime</h5>
                                                                        <small class="text-muted">@item.senttime</small>
                                                                    </div>
                                                                    <p>@item.message</p>
                                                                </div>
                                                            </li>
                                                        }
                                                        else
                                                        {
                                                            <li class="left">
                                                                <img src=@Model.Prijatelj.Slika alt="" class="profile-photo-sm pull-left" />
                                                                <div class="chat-item">
                                                                    <div class="chat-item-header">
                                                                        <h5>@Model.Prijatelj.Ime @Model.Prijatelj.Prezime</h5>
                                                                        <small class="text-muted">@item.senttime</small>
                                                                    </div>
                                                                    <p>@item.message</p>
                                                                </div>
                                                            </li>
                                                        }
                                                    }
                                                }
                                            </ul>
                                        </div>
                                    </div>
                                </div>

                                <div class="send-message">
                                    <div class="input-group">
                                        <input type="text" asp-for="tekstPoruke" class="form-control" placeholder="Type your message">
                                        <span class="input-group-btn">
                                            <button asp-page-handler="Posalji" class="btn btn-default" type="submit">Send</button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>